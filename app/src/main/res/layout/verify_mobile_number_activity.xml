<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/backbtn_logo_component" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="100dp"
            android:text="Login to Foodly"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Verify phone number"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal"
            android:lineHeight="25dp"
            android:text="Enter the 4-Digit code sent to you at"
            android:textColor="#010F07"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="user phone no"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#010F07"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_marginTop="250dp"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_marginTop="250dp"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"/>



    </LinearLayout>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:background="@drawable/btn_corner"
        android:backgroundTint="#EEA734"
        android:text="Continue"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/dontHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/white"
        android:text="Didn't receive code??"
        android:textColor="#868686"
        android:textSize="12sp" />

    <Button
        android:id="@+id/resendCodeAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       android:layout_toRightOf="@id/dontHaveAccount"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/white"
        android:text="Resend Again"
        android:layout_marginLeft="-30dp"
        android:textColor="#EEA734"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:gravity="center_horizontal"
        android:lineHeight="25dp"
        android:layout_below="@+id/resendCodeAgain"
        android:text="By Signing up ypu agree to our Terms Conditions &amp; Privacy Policy."
        android:textColor="#868686"
        android:textSize="18sp" />
</RelativeLayout>